<%- include("partials/header") %>
<% if(error ){ %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-10">
                <div class="alert alert-danger" role="alert">
                     The email has been taken. 
                </div>
            </div>
        </div>
    </div>
<% } %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-4">
            <form method="post" action="/submit">
                <div class="form-floating mb-3">
                    <input type="name" class="form-control" id="name" name="name" placeholder="John Dalton">
                    <label for="floatingName">Name</label>
                </div>

               <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                    <label for="floatingEmail">Email address</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="message" class="form-control" id="message" name="message" placeholder="Message">
                    <label for="floatingMessage">Message</label>
                </div> 

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="checkbox" value="1" id="checkbox" checked>
                    <label class="form-check-label" for="flexCheckChecked">
                      Subscribe our newspaper
                    </label>
                </div>
                
                <div class="form-floating">
                    <input type="submit" class="form-control" id="submit" style="padding:0px;">
                </div>
            </form>
        </div>
    </div>
</div>



<%- include("partials/footer") %>
